@model EmployeeDirectory.ViewModel.EmpoyeeCredentialsViewModel
@{
    ViewBag.Title = "ManagePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Manage Password</h2>


@{
    if (TempData["SuccessMessage"] != null)
    {
        <p class="text-success">@TempData["SuccessMessage"].</p>
    }
}

@using (Html.BeginForm("UpdatePassword", "Employees"))
{
    <div class="form-group">
        @Html.DisplayFor(m => m.Email)
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password)
        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", required = "required" })
    </div>        
    <button type="submit" class="btn btn-primary">Update</button>
}

